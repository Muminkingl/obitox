# ============================================
# OBITOX - ENVIRONMENT VARIABLES
# Sprint 0: Environment Setup
# ============================================

# Redis Configuration (REQUIRED for rate limiting)
# Option 1: Upstash Redis (recommended for production)
# Get free tier at: https://upstash.com
# REDIS_URL=rediss://default:xxxxx@xxxxx.upstash.io:6379

# Option 2: Local Redis (for development)
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
MAX_DOMAINS_FREE_TIER=3
MAX_DOMAINS_PRO_TIER=50
MAX_DOMAINS_ENTERPRISE_TIER=1000

# DNS Verification
DNS_VERIFICATION_INTERVAL=15
DNS_TIMEOUT_MS=10000

# Security
REQUIRE_EMAIL_VERIFICATION=true
BLOCK_DISPOSABLE_EMAILS=true
ENABLE_ABUSE_DETECTION=true

# Feature Flags
DOMAIN_CREATION_ENABLED=true
DNS_AUTO_VERIFICATION_ENABLED=true

# Monitoring (Optional - add later)
# DATADOG_API_KEY=
# SENTRY_DSN=

# ============================================
# WAYL PAYMENT INTEGRATION
# ============================================
# Get your Wayl token from: https://thewayl.com
WAYL_TOKEN=your_wayl_token_here

# Wayl API configuration
WAYL_API_KEY=your_wayl_api_key_here
WAYL_WEBHOOK_SECRET=your_webhook_secret_here
WAYL_API_URL=https://api.thewayl.com

# Currency conversion (USD to IQD)
USD_TO_IQD_RATE=1310

# Application URL (for payment redirects)
# Production: https://yourdomain.com
# Local: http://localhost:3000
APP_URL=http://localhost:3000
